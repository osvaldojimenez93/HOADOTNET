@page "/helpful-links"

<MudItem xs="12" class="d-flex justify-center">
            <HeaderTemplate />
</MudItem>

<PageTitle>Helpful Links</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudText Typo="Typo.h5">Helpful Links:</MudText>
    <MudList T="string">
        @foreach (var link in helpfulLinks)
        {
            <MudListItem>
                <MudLink Href="@link.Url" Target="_blank">@link.Text</MudLink>
            </MudListItem>
        }
    </MudList>
</MudContainer>

