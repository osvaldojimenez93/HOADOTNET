    private List<LinkItem> helpfulLinks = new List<LinkItem>
    {
    new LinkItem { Text = "District 6 City Council", Url ="https://www.sa.gov/Directory/Departments/Mayor-Council/City-Council/D6" },
    new LinkItem { Text = "SAWS Website", Url = "https://www.saws.org/" },
