    new LinkItem { Text = "Garbage Collection Map", Url = "https://gis.sanantonio.gov/swmd/mycollectionday/default.html" },
    new LinkItem { Text = "Bexar County Property Maps", Url = "https://bexar.trueautomation.com/mapSearch/?cid=110" },
    new LinkItem { Text = "City of San Antonio Website", Url = "https://www.sanantonio.gov/" }
